{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": ["package"],
  "exclude": ["package/**/*.test.ts", "package/**/*.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
